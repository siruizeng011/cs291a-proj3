
<div class="container-fluid">
  <div class="d-flex">
    <h1>User Info</h1>
  </div>

  <p>Name: <%= @user.name %></p>
  <p>Email: <%= @user.email %></p>

  <div class="btn btn-warning btn-sm">
                <%= link_to "Edit", edit_user_path(@user), :class => "btn"%>
  </div>
  <div class="btn btn-danger btn-sm">
                <%= link_to "Delete", user_path(@user), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                }, :class => "btn" %>
  </div>

  <h2>Posts by <%= @user.name %></h2>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @user.posts.each do |post| %>
      <div class="col">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= post.content %></p>
            <%= link_to "details", user_post_path(@user, post), :class => "card-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <hr>
  <h2>Write a new Post:</h2>
  <%= form_with model: [ @user, @user.posts.build ] do |form| %>
      <div class="mb-3">
        <%= form.label :title, :class => "form-label" %><br>
        <%= form.text_field :title, :class => "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :content, :class => "form-label" %><br>
        <%= form.text_area :content, :class => "form-control" %>
      </div>
      <div class="btn">
        <%= form.submit %>
      </div>
  <% end %>

</div>





