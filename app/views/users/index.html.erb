

<div class="container-fluid">
  <div class="d-flex">
    <h1>User Admin</h1>
  </div>
  <table class="table table-sm table-bordered align-middle">
    <thead>
      <tr>
        <th scope="col" style="font-size: 24px;">User Name</th>
        <th scope="col" style="font-size: 24px;">Operation</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user.name, user, :style => "font-size: 20px;"%>
          </td>
          <td>
              <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                <%= link_to "Edit", edit_user_path(user), :class => "btn btn-warning"%>
                <%= link_to "Delete", user_path(user), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                }, :class => "btn btn-danger" %>
              </div>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <div class="btn btn-success btn-sm">
    <%= link_to "New User", new_user_path, :class => "btn"%>
  </div>
</div>


